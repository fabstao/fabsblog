<%= form_with(model: [ @article, @article.comentarios.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </div>
  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>