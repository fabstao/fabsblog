<div class="alert alert-primary" role="alert">
  <h2>Artículos</h2>
</div>

<button type="button" class="btn btn-outline-secondary"> <%= link_to 'Nuevo Artículo', new_article_path %></button>
<br/><br/>
<table width="60%">
<tr>
    <th>Title</th>
    <th>Text</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
<% @articles.each do |article| %>
<tr>
  <td> <%= article.title %> </td>
  <td><%= article.text %></td>
  <td><button type="button" class="btn btn-outline-success"><%= link_to 'Show', article_path(article) %> </button></td>
  <td><button type="button" class="btn btn-outline-secondary"><%= link_to 'Edit', edit_article_path(article) %></button></td>
  <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: '¿Seguro que quieres borrar?' } %></button></td>
</tr>
<% end %>
</table>